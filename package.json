{
	"name": "@mscharley/dependency-changesets-action",
	"description": "Github Action to publish changesets to dependency update PR's",
	"version": "0.0.0-development",
	"author": "Matthew Scharley <matt@scharley.me>",
	"private": true,
	"type": "module",
	"homepage": "https://github.com/mscharley/dependency-changesets-action",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mscharley/dependency-changesets-action.git"
	},
	"bugs": {
		"url": "https://github.com/mscharley/dependency-changesets-action/issues"
	},
	"keywords": [
		"actions",
		"node",
		"setup"
	],
	"exports": {
		".": "./dist/index.cjs"
	},
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"codegen": "graphql-code-generator",
		"bundle": "npm run codegen && npm run package",
		"ci-test": "jest",
		"lint": "eslint",
		"package": "rollup --config rollup.config.js",
		"package:watch": "npm run package -- --watch",
		"test": "(jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
		"all": "npm run codegen && npm run lint && npm run test && npm run package"
	},
	"license": "MIT",
	"jest": {
		"preset": "ts-jest",
		"verbose": true,
		"clearMocks": true,
		"testEnvironment": "node",
		"moduleFileExtensions": [
			"js",
			"ts"
		],
		"testMatch": [
			"**/*.test.ts"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/dist/"
		],
		"moduleNameMapper": {
			"^(\\.{1,2}/.*)\\.js$": "$1"
		},
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"coverageReporters": [
			"json-summary",
			"text",
			"lcov"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"./src/**",
			"!./src/generated/**"
		]
	},
	"dependencies": {
		"@actions/core": "^1.10.1",
		"@actions/github": "^6.0.0",
		"generic-type-guard": "^5.0.0"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "5.0.3",
		"@graphql-codegen/typescript": "4.1.0",
		"@graphql-typed-document-node/core": "3.2.0",
		"@mscharley/eslint-config": "4.0.4",
		"@mscharley/prettier-config": "3.0.7",
		"@rollup/plugin-commonjs": "^28.0.1",
		"@rollup/plugin-node-resolve": "^15.3.0",
		"@rollup/plugin-typescript": "^12.1.1",
		"@types/jest": "29.5.13",
		"@types/node": "20.16.11",
		"jest": "29.7.0",
		"js-yaml": "4.1.0",
		"make-coverage-badge": "1.2.0",
		"rollup": "^4.24.3",
		"rollup-plugin-license": "^3.5.3",
		"ts-jest": "29.2.5",
		"typescript": "5.6.3"
	},
	"packageManager": "pnpm@9.12.1+sha512.e5a7e52a4183a02d5931057f7a0dbff9d5e9ce3161e33fa68ae392125b79282a8a8a470a51dfc8a0ed86221442eb2fb57019b0990ed24fab519bf0e1bc5ccfc4"
}
