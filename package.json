{
	"name": "@mscharley/dependency-changesets-action",
	"description": "Github Action to publish changesets to dependency update PR's",
	"version": "0.0.0-development",
	"author": "Matthew Scharley <matt@scharley.me>",
	"private": true,
	"type": "module",
	"homepage": "https://github.com/mscharley/dependency-changesets-action",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mscharley/dependency-changesets-action.git"
	},
	"bugs": {
		"url": "https://github.com/mscharley/dependency-changesets-action/issues"
	},
	"keywords": [
		"actions",
		"node",
		"setup"
	],
	"exports": {
		".": "./dist/index.js"
	},
	"scripts": {
		"codegen": "graphql-code-generator",
		"bundle": "pnpm run codegen && pnpm run package",
		"ci-test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --show-seed --randomize --no-cache",
		"lint": "tsc --noEmit && eslint",
		"package": "rollup --config rollup.config.js",
		"package:watch": "pnpm run package -- --watch",
		"test": "(NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --show-seed --randomize --no-cache && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
		"all": "pnpm run codegen && pnpm run lint && pnpm run test && pnpm run package"
	},
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^2.0.2",
		"@octokit/core": "^7.0.6",
		"@octokit/plugin-paginate-rest": "^14.0.0",
		"@octokit/plugin-rest-endpoint-methods": "^17.0.0",
		"@octokit/plugin-throttling": "^11.0.3",
		"generic-type-guard": "^5.1.0",
		"minimatch": "^10.2.1",
		"parse-diff": "^0.11.1",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "6.1.1",
		"@graphql-codegen/typescript": "5.0.7",
		"@graphql-typed-document-node/core": "3.2.0",
		"@jest/globals": "30.2.0",
		"@mscharley/eslint-config": "4.2.22",
		"@mscharley/prettier-config": "3.1.8",
		"@rollup/plugin-commonjs": "29.0.0",
		"@rollup/plugin-node-resolve": "16.0.3",
		"@rollup/plugin-typescript": "12.3.0",
		"@swc/jest": "0.2.39",
		"@types/jest": "30.0.0",
		"@types/node": "24.10.0",
		"jest": "30.2.0",
		"js-yaml": "4.1.1",
		"make-coverage-badge": "1.2.0",
		"rollup": "4.57.1",
		"rollup-plugin-license": "3.6.0",
		"typescript": "5.9.3"
	},
	"packageManager": "pnpm@10.30.0",
	"pnpm": {
		"onlyBuiltDependencies": [
			"@swc/core",
			"unrs-resolver"
		]
	}
}
